<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Header and Footer Links</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      .section {
        padding: 20px;
        background: #f8f8f8;
      }
      .container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        max-width: 1200px;
        margin: 0 auto;
      }
      .column {
        flex: 1 1 30%;
        margin: 10px;
        padding: 10px;
        background: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .column h2 {
        margin-top: 0;
      }
      .column a {
        display: block;
        color: #0073e6;
        text-decoration: none;
        margin: 5px 0;
      }
      .column a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <section class="section">
      <div class="container">
        {
          headerData.links.map((section) => (
            <div class="column">
              <h2>{section.text}</h2>
              {section.links.map((link) => (
                <a href={link.href}>{link.text}</a>
              ))}
            </div>
          ))
        }
      </div>
    </section>
    <section class="section">
      <div class="container">
        {
          footerData.links.map((section) => (
